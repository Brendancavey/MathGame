@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>How to play</h2>
    <ul style="list-style: none;">
        <li>Answer as many questions as you can without a calculator</li>
        <li>The timer resets every time you answer a question</li>
        <li>Correct answers increases your score!</li>
        <li>The faster you answer a question, the more points you get!</li>
        <li>Maintain a correct answer streak to get even more points!</li>
        <li>Incorrect answers decreases your score and resets your streak</li>
        <li>Pressing on the 'Done' button or having the timer reach 0 is game over</li>
    </ul>
    <a class="btn btn-outline-primary" asp-area="" asp-controller="MathQuestion" asp-action="Random">Play</a>
    
</div>
